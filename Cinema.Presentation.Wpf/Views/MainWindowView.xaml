<Window x:Class="Cinema.Presentation.Wpf.Views.MainWindowView"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:Cinema.Presentation.Wpf.ViewModels"
        Title="Cinema" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding Films}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type ViewModels:FilmViewModel}">
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="2" Margin="5">
            <Button Content="Show all films"></Button>
        </StackPanel>
    </Grid>
</Window>